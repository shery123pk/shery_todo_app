# Database Configuration - Neon PostgreSQL
# Get from: https://console.neon.tech
DATABASE_URL=postgresql://your-user:your-password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# For local development (alternative):
# DATABASE_URL=postgresql://todo_user:todo_pass@localhost:5432/todo_db

# Authentication
BETTER_AUTH_SECRET=dev-secret-key-change-in-production-min-32-chars
BETTER_AUTH_URL=http://localhost:8000

# CORS
FRONTEND_URL=http://localhost:3000

# Application
DEBUG=true
ENVIRONMENT=development

# OpenAI API (for AI Chatbot - Phase III)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # or gpt-4-turbo, gpt-3.5-turbo

# Qdrant Vector Database (for semantic search)
# Get from: https://cloud.qdrant.io or run locally
QDRANT_URL=https://your-cluster.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=todo_embeddings

# For local Qdrant (alternative):
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=  # Leave empty for local

# Optional: Kafka (Phase V - Event Streaming)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092

# Optional: Production deployment
# DATABASE_URL=postgresql://user:pass@ep-xxx.pooler.neon.tech/db?sslmode=require
# BETTER_AUTH_URL=https://[username]-todo-backend.hf.space
# FRONTEND_URL=https://[your-app].vercel.app
# DEBUG=false
# ENVIRONMENT=production
